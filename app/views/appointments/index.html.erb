<div class='container'>
<h1>Daily appointments </h1>
<div class='msg'>
  <h3>message from barber</h3>
  <% @posts.each do |p| %>
  <%if p.user.profile.attached? %>
  <p><%= image_tag(p.user.profile,style:"border-radius:75%;height:75px;width:75px")%> <em><%=p.user.name %></em>
  <%end%>
  <%= p.post %> </p>
  <%end%>

</div>
 
<div class='render'>
 <ol>
   <% @appointments.each do |a| %>
     <li>Name: <%= a.name %> Date: <%=a.date.strftime("%m-%d-%Y") %> Time: <%= a.time.strftime(" %I:%M%P") %>
     
     </li>
   <% end %>
 </ol>
</div>
</div>