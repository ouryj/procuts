<div class='container'>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>


<p class="navbar-text pull-right">
<% if user_signed_in? %>
  Logged in as <strong><%= current_user.name %></strong>.
  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
<% end %>
</p>
<%if current_user.profile.attached? %>
  <%= image_tag(current_user.profile, style:"border-radius:75%; height:100px; width:100px") %>
<%end%>

<p>would you like to send an update ?</p> 
<%= link_to 'update clients ', new_barber_path %>

<div class='post'>
   <h4>my updates</h4>
   <% @posts.each do |p| %>
   <p><%=p.post %></p>
   <%=link_to 'delete update', barber_path(p), method: :delete,class:'delete' %>
   <%end%>

</div>
<h1>below are your appointments</h1>
<ol>
<div class='render'>

   <% @appointments.each do |a| %>
   <li><P>Name: <%= a.name %> Day: <%=a.date.strftime("%m-%d-%Y") %> Time: <%= a.time.strftime(" %I:%M%P") %> Phone: 
   <%=tel_link  number_to_phone(a.phone,area_code: true ,class:'number') %>
   </P> </li>
   <%= link_to 'End Appointment',appointment_path(a),method: :delete , class:'delete' %>
   <% end %>

</div>
</ol>
</div>
